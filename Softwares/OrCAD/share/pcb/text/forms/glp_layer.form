FILE_TYPE=FORM_DEFN VERSION=2
FORM
VARIABLE
PORT 66 10
HEADER "Glossing Subclasses"

POPUP <SUBCLASSP>"TOP""0".

POPUP <DIRECTION_POP>"Horizontal""0","Vertical""1","Diagonal positive""2","Diagonal negative""3".


TILE StdTile
TPANEL 2

FIELD done
FLOC 1 0
MENUBUTTON "Done" 9 3
ENDFIELD

FIELD help
FLOC 11 0
MENUBUTTON "Help" 9 3
ENDFIELD

ENDTILE

TILE SUBCLASS_TILE
TPANEL 1

TEXT "Subclass:"
TLOC 11 0
ENDTEXT

TEXT
TLOC 20 0
INFO subclass_name 18
ENDTEXT

TEXT "Maximum 45:"
TLOC 44 0
ENDTEXT

FIELD max_45
FLOC 55 0
REALFILLIN 10 10
DECIMAL 2
ENDFIELD

FIELD delete
FLOC 1 0
MENUBUTTON "Delete" 8 2
ENDFIELD


# Comment these fields out for now
{
TEXT
TLOC 20 2
INFO subclass_number 3
ENDTEXT

TEXT ":"
TLOC 23 2
ENDTEXT
TEXT "Direction:"
TLOC 11 4
ENDTEXT

FIELD direction
FLOC 23 4
ENUMSET 17
POP "DIRECTION_POP"
ENDFIELD


TEXT "X Grids:"
TLOC 4 6
ENDTEXT

TEXT
TLOC 13 6
INFO x_grids 60
ENDTEXT

TEXT "Y grids:"
TLOC 4 8
ENDTEXT

TEXT
TLOC 13 8
INFO y_grids 60
ENDTEXT

TEXT "X Prefs:"
TLOC 4 10
ENDTEXT

TEXT "Y Prefs:"
TLOC 4 12
ENDTEXT


FIELD x_preferences
FLOC 13 10
STRFILLIN 60 60
ENDFIELD

FIELD y_preferences
FLOC 13 12
STRFILLIN 60 60
ENDFIELD
}

ENDTILE

TILE ADD_TILE
TPANEL 0
FIELD add
FLOC 1 0
MENUBUTTON "Add" 8 2
POP "SUBCLASSP"
ENDFIELD

ENDTILE

ENDFORM
