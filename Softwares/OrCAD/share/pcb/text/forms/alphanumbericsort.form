FILE_TYPEt=FORM_DEFN VERSION=2
FORM
FIXED
PORT 37 60
HEADER "Row Sort"

POPUP <SORT_POP1>"""".
POPUP <SORT_POP2>"""".
POPUP <SORT_POP3>"""".

ACTIVEFIELD "sort1_heading"

TILE

GROUP "Sort By:"
GLOC 2 1
GSIZE 35 7
ENDGROUP

FIELD sort1_heading
FLOC 4 3
ENUMSET 15
POP "SORT_POP1"
ENDFIELD

FIELD sort1_ascending
FLOC 23 3
CHECKLIST "Ascending" "sort_1_order"
ENDFIELD

FIELD sort1_descending
FLOC 23 5
CHECKLIST "Descending" "sort_1_order"
ENDFIELD

GROUP "Then By:"
GLOC 2 8
GSIZE 35 7
ENDGROUP

FIELD sort2_heading
FLOC 4 10
ENUMSET 15
POP "SORT_POP2"
ENDFIELD

FIELD sort2_ascending
FLOC 23 10
CHECKLIST "Ascending" "sort_2_order"
ENDFIELD

FIELD sort2_descending
FLOC 23 12
CHECKLIST "Descending" "sort_2_order"
ENDFIELD

GROUP "Then By:"
GLOC 2 15
GSIZE 35 7
ENDGROUP

FIELD sort3_heading
FLOC 4 17
ENUMSET 15
POP "SORT_POP3"
ENDFIELD

FIELD sort3_ascending
FLOC 23 17
CHECKLIST "Ascending" "sort_3_order"
ENDFIELD

FIELD sort3_descending
FLOC 23 19
CHECKLIST "Descending" "sort_3_order"
ENDFIELD

FIELD done
FLOC 9 22
MENUBUTTON "Ok" 9 3
ENDFIELD

FIELD Cancel
FLOC 19 22
MENUBUTTON "Cancel" 9 3
ENDFIELD

ENDTILE

ENDFORM

