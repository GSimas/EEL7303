FILE_TYPE=FORM_DEFN VERSION=2
FORM
VARIABLE
PORT 33 18
HEADER "Edit Aperture Wheels"

MESSAGE APT_ERRORS 1 "Errors detected in aperture table"
MESSAGE NOTHING_TO_OOPS 1 "Nothing to oops"
MESSAGE CANT_FIND 1 "Can't find wheel record to match tile"
MESSAGE WHEEL_EXISTS 1 "Wheel already exists"

TILE StdTile
TPANEL 2
FIELD done
FLOC 1 1
MENUBUTTON "Done" 9 3
ENDFIELD

FIELD cancel
FLOC 11 1
MENUBUTTON "Cancel" 9 3
ENDFIELD

FIELD help
FLOC 23 1
MENUBUTTON "Help" 9 3
ENDFIELD

ENDTILE

TILE WHEEL_TILE
TPANEL 1
FIELD edit
FLOC 9 0
MENUBUTTON "Edit..." 9 2
ENDFIELD

FIELD delete
FLOC 19 0
MENUBUTTON "Delete" 9 2
ENDFIELD

FIELD wheel
FLOC 2 0
INTFILLIN 3 3
MIN 1
MAX 999
ENDFIELD

ENDTILE

TILE ADD_WHEEL
TPANEL 0
TEXT "Wheel"
TLOC 2 3
ENDTEXT

TEXT "Operations"
TLOC 14 3
ENDTEXT

FIELD add_wheel
FLOC 1 0
MENUBUTTON "Add" 9 2
ENDFIELD

FIELD undo_wheel
FLOC 17 0
MENUBUTTON "Undo Delete" 13 2
ENDFIELD

ENDTILE

ENDFORM
