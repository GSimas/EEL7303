FILE_TYPE=FORM_DEFN VERSION=2
FORM 
FIXED
PORT 46 30
HEADER "Advanced Highlight"

TILE

POPUP <OBJECT_LIST>  """".
POPUP <ATTR_LIST>  """".
POPUP <VALUE_LIST> """".

TEXT "Object Type:"
TLOC 3 1
ENDTEXT
FIELD object_type
FLOC 15 1
ENUMSET 18
POP "OBJECT_LIST"
ENDFIELD

TEXT "Attribute:"
TLOC 3 3
ENDTEXT
FIELD search_attr
FLOC 15 3
ENUMSET 18
POP "ATTR_LIST"
ENDFIELD

TEXT "Value:"
TLOC 3 5
ENDTEXT
FIELD search_value
FLOC 15 5
ENUMSET 18
POP "VALUE_LIST"
ENDFIELD

TEXT "Color:"
TLOC 3 7
ENDTEXT
FIELD color
FLOC 15 7
COLOR 20 1
ENDFIELD
FIELD dehighlight
FLOC 15 9
CHECKLIST  "Dehighlight matching items"
ENDFIELD
FIELD tempHighlight
FLOC 15 11
CHECKLIST  "Temporary highlight"
ENDFIELD

GROUP "Available Colors"
GLOC 1 13
GSIZE 44 14
ENDGROUP 

GRID color_grid
FLOC 3 16
FSIZE 40 10
OPTIONS VLINES HLINES
ENDGRID

FIELD update
FLOC 1 28
MENUBUTTON "Update" 10 3
ENDFIELD

FIELD done
FLOC 12 28
MENUBUTTON "OK" 10 3
ENDFIELD

FIELD cancel
FLOC 24 28
MENUBUTTON "Cancel" 10 3
ENDFIELD

FIELD help
FLOC 36 28
MENUBUTTON "Help" 10 3
ENDFIELD

ENDTILE
ENDFORM
